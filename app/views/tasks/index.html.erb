<h1>タスク一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <ul>
<% @tasks.each do |task| %>
<li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
<% end %>
</ul>

<%= link_to '新規タスクの投稿', new_task_path %>
<%= link_to 'Logout', logout_path, method: :delete %>
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <p>未登録ですか？<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %></p>
      <p>登録済みですか？<%= link_to 'Login!', login_path, class: 'btn btn-lg btn-primary' %></p>
    </div>
  </div>
<% end %>

